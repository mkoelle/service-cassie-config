{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch debug w/ cucumber",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/node_modules/.bin/cucumber-js",
            "windows": {
                "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber"
            },
            "env": {
                "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.json"
            },
            "args": [
                "features/",
                "--require-module",
                "ts-node/register",
                "--require",
                "'features/**/*.ts'",
                "--tags",
                "@debug"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--nolazy"
            ],
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*",
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch @only w/ cucumber",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/node_modules/.bin/cucumber-js",
            "windows": {
                "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber"
            },
            "env": {
                "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.json"
            },
            "args": [
                "features/",
                "--require-module",
                "ts-node/register",
                "--require",
                "'features/**/*.ts'",
                "--tags",
                "@only"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--nolazy"
            ],
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*",
                "<node_internals>/**/*.js"
            ]
        }
    ]
}